{
  "name": "edulearn-india",
  "version": "1.0.0",
  "description": "Free educational platform for Indian students",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install --prefix client && npm run build --prefix client",
    "heroku-postbuild": "npm run build",
    "create-admin": "node scripts/createAdmin.js",
    "reset-admin": "node scripts/resetAdmin.js",
    "clear-db": "node scripts/clearDatabase.js"
  },
  "keywords": [
    "education",
    "learning",
    "mern",
    "tutorials"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
